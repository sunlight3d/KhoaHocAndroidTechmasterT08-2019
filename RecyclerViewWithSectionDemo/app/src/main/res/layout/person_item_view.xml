<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp">

    <TextView
            android:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="81dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            android:scaleType="fitXY" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.521"/>
</androidx.constraintlayout.widget.ConstraintLayout>