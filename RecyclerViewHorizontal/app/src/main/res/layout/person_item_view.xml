<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="100dp">

    <TextView
            android:text="@string/app_name"
            android:layout_width="65dp"
            android:layout_height="30dp" android:id="@+id/txtName" android:textSize="17sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.526"/>
    <TextView
            android:text="11"
            android:layout_width="65dp"
            android:layout_height="30dp" android:id="@+id/txtAge" android:textSize="17sp"
            android:textAlignment="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="@+id/txtName" app:layout_constraintStart_toStartOf="@+id/txtName"/>
</androidx.constraintlayout.widget.ConstraintLayout>